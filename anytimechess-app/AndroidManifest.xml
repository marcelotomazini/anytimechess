<?xml version="1.0" encoding="UTF-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="crazygames.android.anytimechess"
    android:versionCode="19"
    android:versionName="0.0.1-SNAPSHOT" >

    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.SEND_SMS" />
    <uses-permission android:name="android.permission.RECEIVE_SMS" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>
    
    <application
        android:name="AnytimeChess"
        android:debuggable="true"
        android:icon="@drawable/chess"
        android:label="@string/app_name" >
        <activity android:name="crazygames.android.anytimechess.AnytimeChessActivity" android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <receiver
            android:name="crazygames.android.anytimechess.message.SMSReceiver"
            android:exported="true" > 
            <intent-filter android:priority="9999999"> 
                <action android:name="android.provider.Telephony.SMS_RECEIVED" /> 
            </intent-filter> 
        </receiver>
        
    </application>

    <uses-sdk android:minSdkVersion="11" android:targetSdkVersion="19" />

</manifest>
